@using MyEvernoteWebApp.ViewModels
@model OkViewModel


@{
    ViewBag.Title = Model.Title;
}

<link href="~/Content/login-register.css" rel="stylesheet" />
<link href="~/Content/validation-summary.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />


<section class="login-info">
    <div class="container">
        <div class="row main">
            <div class="form-header">
                <h1 class="text-center ">@Model.Header</h1>
            </div>

            <form class="form-group">
                <div class="main-content">
                    <div class="text-success">
                        <h2><span class="glyphicon glyphicon-ok-circle"></span>&nbsp;&nbsp;&nbsp;@Model.Title </h2>
                        <hr />
                        <p class="text-justify">

                            @foreach (string msg in Model.Items)
                            {
                                @msg <br />
                            }

                        </p>


                    </div>

                </div>
            </form>
        </div>
    </div>
</section>



@{
    string js = string.Empty;

    if (Model.IsRedirecting)
    {
        js = "setTimeout(function () { window.location = '" + Model.RedirectingUrl + "'; }, " +
            Model.RedirectingTimeout + ");";
    }
}

<script>

    $(function () {
        @Html.Raw(js);
    });

</script>
